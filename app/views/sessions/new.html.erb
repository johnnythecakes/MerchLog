<div class="row">

	<div class="col-sm-4 col-sm-offset-4">
		<h1>Log in</h1>

		<%= form_for @user, html: {class: 'form', role: 'form'} do |f| %>
			<div class= "form-group">
				<%=f.text_field :email, placeholder: "me@me.com" , class: "form-control"%>
			</div>
			<div class= "form-group">
				<%= f.password_field :password, placeholder: "password ..." , class: "form-control"%>
			</div>
			<div class= "form-group">
				<%= f.submit "Submit", class: 'btn btn-primary btn-med' %>
			</div>
			<%= link_to "Not a user yet? Sign up here!", new_user_path %>
		<% end %>
	</div>
</div>