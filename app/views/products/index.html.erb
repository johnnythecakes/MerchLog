	<% 
=begin %> 
	<div>
		<p>
  		<%= link_to "All My MERCH", user_products_path(u.id)(productfilter:"showall") %>
  		<br>
		  <%= link_to "Dark Roasts Only",  beans_path(beanfilter:"dark") %>
		  <br>
		  <%= link_to "Light Roasts Only", beans_path(beanfilter:"light") %>
		  <br>
		  <%= link_to "In Stock", beans_path(beanfilter:"instock") %>
		</p>
	</div>
<% 
=end %>

	<div class="row">
		<% if current_user != nil %>
			<% @products.each do |p| %>
				<div class="col-sm-6 col-md-4">
					<div class="thumbnail">
						<div id="myCarousel" class="carousel slide" >
							<ol class="carousel-indicators">
								<% p.photos.each_with_index do |phot, index| %>
								<li data-target="#myCarousel" data-slide-to="<%= index + 1 %>" 
									class="<%= index == 0 ? 'active' : ''%>"></li>
								<% end %>
							</ol>

							<div class="carousel-inner">
								<% p.photos.each_with_index do |phot, index| %>
									<div class="<%= index == 0 ? 'item active' : 'item' %>">
										<%= image_tag phot.image.url(:medium).to_s %>
									</div> 
								<% end %>      
							</div>
						</div>
						<div class="caption">
							<h3><%= p.name %></h3>
							<p><%= p.description %></p>
							<p><a href="#">
							<%= link_to "more info", user_product_path(current_user, p.id), class: 'btn btn-primary' %></a></p> 
						</div>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
