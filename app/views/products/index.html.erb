<div class="row">
  <div class="col-md-4 col-md-4">
  	<% if current_user != nil %>
				<% @products.each do |p| %>
	    <div class="thumbnail">

	    	<div id="show_right"> 
				  <div id="myCarousel" class="carousel slide">
				    <ol class="carousel-indicators">
				      <% p.photos.each_with_index do |phot, index| %>
				        <li data-target="#myCarousel" data-slide-to="<%= index + 1 %>" class="<%= index == 0 ? 'active' : ''%>"></li>
				      <% end %>
				    </ol>

				    <div class="carousel-inner">
				      <% p.photos.each_with_index do |phot, index| %>
				        <div class="<%= index == 0 ? 'item active' : 'item' %>">
				          <%= image_tag phot.image.url(:medium).to_s %>
				        </div> 
				      <% end %>      
				    </div>
				    ...
				  </div>
				</div>
		      <div class="caption">
		        <h3><%= p.name %></h3>
		        <p><%= p.description %></p>
		        <p><a href="#" class="btn btn-primary" role="button">More Info</a>
		      </div>
	      <% end %>
	    </div>
    <% end %>
  </div>
</div>
