<div class="jumbotron">
	<h1><%= @product.name %></h1>
	
	<div class="row">
		<div class="col-md-6">
			<%= image_tag "@product.photo.url(:large).to_s" %>
		</div>
	<div class="col-md-6">

			<h4>Merch Specs:</h4>
			<ul class="list-group">
				<li class="list-group-item">Brand/Make: <%= @product.make %></li>
				<li class="list-group-item">Category: <%= @product.category %></li>
				<li class="list-group-item">Subcategory: <%= @product.subcategory %></li>
				<li class="list-group-item">Purchase Price: $<%= @product.p_price %></li>
				<li class="list-group-item">Purchased On: <%= @product.purchased_on %></li>
				<li class="list-group-item">Estimated Current Price: $<%= @product.c_price %></li>
				<li class="list-group-item">Warranty: <%= @product.warranty %></li>
				<li class="list-group-item">Merch Warranty Length: <%= @product.w_length %> months</li>
				<li class="list-group-item">Remaining Days Under Warranty: <%= @remaining_w %></li>
			</ul>
			<p><%= @product.description %></p>
	</div>
</div>

	<h3>Remaining days under warranty:</h3>
	<div class="progress">
		<div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="<%= @product.w_length %>" style="width: <%= @days_percent %>%">
			<%= @remaining_w %> days
		</div>
	</div>

	<a href="">Warranty Info</a>
	<a href="">User Manual</a>
	
	<%= link_to "Add photo", new_product_photo_path(@product.id) %>
	<%= link_to "Back to the list!", user_products_path(:user_id) %>
</div>

