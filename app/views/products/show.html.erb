<div class="jumbotron">
	<h1><%= @product.name %></h1>

	<img src="" alt="">

	<h2>Merch Info</h2>
	<h3>Brand/Make: <%= @product.make %></h3>

	<h4>Merch Specs:</h4>
	<ul>
		<li>Category: <%= @product.category %></li>
		<li>Subcategory: <%= @product.subcategory %></li>
		<li>Purchase Price: $<%= @product.p_price %></li>
		<li>Purchased On: <%= @product.purchased_on %></li>
		<li>Estimated Current Price: $<%= @product.c_price %></li>
		<li>Warranty: <%= @product.warranty %></li>
		<li>Merch Warranty Length: <%= @product.w_length %> months</li>
		<li>Remaining Days Under Warranty: <%= @remaining_w %></li>
	</ul>
	<p><%= @product.description %></p>

	<h3>Remaining days under warranty:</h3>
	<div class="progress">
		<div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="<%= @product.w_length %>" style="width: <%= @days_percent %>%">
			<%= @remaining_w %> days
		</div>
	</div>

	<a href="">Warranty Info</a>
	<a href="">User Manual</a>
	
	<%= link_to "Add photo", new_product_photo_path(@product.id) %>
	<%= link_to "Back to the list!", user_products_path(:user_id) %>
</div>

